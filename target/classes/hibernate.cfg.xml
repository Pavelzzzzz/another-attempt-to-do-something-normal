    <mapping class="com.pavelzzzzz.another_attempt_to_do_something_normal.domain.TblSecPasswordEntity"/>
    <mapping class="com.pavelzzzzz.another_attempt_to_do_something_normal.domain.TblSecRoleEntity"/>
    <mapping class="com.pavelzzzzz.another_attempt_to_do_something_normal.domain.TblSecUserEntity"/>
    <mapping class="com.pavelzzzzz.another_attempt_to_do_something_normal.domain.TblSecUserRoleEntity"/>
    <mapping class="com.pavelzzzzz.another_attempt_to_do_something_normal.domain.TblSerLanguageEntity"/>
